<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

<!-- activity半透明 -->
    <style name="Theme.Translucent" parent="android:style/Theme.Translucent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorForeground">@android:color/transparent</item>
    </style>

    
    <style name="style_topmenu_text">
        <item name="android:textSize">@dimen/topmenu_title_textsize</item>
        <item name="android:textColor">@drawable/topmenu_textcolor</item>
    </style>
    
    <style name="style_list_text">
        <item name="android:textSize">@dimen/list_textsize</item>
        <item name="android:textColor">@drawable/list_textcolor</item>
    </style>
    
    <style name="style_topmenu_bg">
        <item name="android:background">@drawable/topmenubg</item>
    </style>
     
</resources>